---
import Layout from "@/layouts/Layout.astro";
import { PasswordRecoveryForm } from "@/components/auth/PasswordRecoveryForm";

// Already handled by middleware, but check just in case
/* eslint-disable @typescript-eslint/no-unused-vars */
const user = Astro.locals.user;
---

<Layout title="Odzyskiwanie hasła - ChairAI">
  <main class="min-h-screen flex items-center justify-center px-4 py-12 bg-background">
    <div class="w-full max-w-md space-y-8">
      <div class="text-center space-y-2">
        <h1 class="text-3xl font-bold tracking-tight">Zresetuj hasło</h1>
        <p class="text-muted-foreground">Wprowadź swój adres e-mail, a wyślemy Ci link do zresetowania hasła</p>
      </div>

      <div class="bg-card p-8 rounded-lg border shadow-sm">
        <PasswordRecoveryForm client:load />
      </div>

      <div class="text-center text-sm">
        <span class="text-muted-foreground">Pamiętasz hasło? </span>
        <a
          href="/login"
          class="font-medium text-primary hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring rounded"
        >
          Zaloguj się
        </a>
      </div>
    </div>
  </main>
</Layout>
