---
import Layout from "@/layouts/Layout.astro";
import { LoginForm } from "@/components/auth/LoginForm";

// If user is already logged in, redirect will be handled by middleware
// This is just for type safety
/* eslint-disable @typescript-eslint/no-unused-vars */
const user = Astro.locals.user;

// Get error from URL if callback failed
const error = Astro.url.searchParams.get("error");
---

<Layout title="Logowanie - ChairAI">
  <main class="min-h-screen flex items-center justify-center px-4 py-12 bg-background">
    <div class="w-full max-w-md space-y-8">
      <div class="text-center space-y-2">
        <h1 class="text-3xl font-bold tracking-tight">Zaloguj się</h1>
        <p class="text-muted-foreground">Wprowadź swoje dane, aby zalogować się do konta</p>
      </div>

      {
        error && (
          <div
            class="p-4 text-sm text-destructive bg-destructive/10 border border-destructive/20 rounded-md"
            role="alert"
          >
            {decodeURIComponent(error)}
          </div>
        )
      }

      <div class="bg-card p-8 rounded-lg border shadow-sm">
        <LoginForm client:load />

        <div class="mt-4 text-center">
          <a
            href="/password-recovery"
            class="text-sm text-muted-foreground hover:text-primary focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring rounded"
          >
            Nie pamiętasz hasła?
          </a>
        </div>
      </div>

      <div class="text-center text-sm">
        <span class="text-muted-foreground">Nie masz jeszcze konta? </span>
        <a
          href="/register"
          class="font-medium text-primary hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring rounded"
        >
          Zarejestruj się
        </a>
      </div>
    </div>
  </main>
</Layout>
