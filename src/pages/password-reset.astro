---
import Layout from "@/layouts/Layout.astro";
import { PasswordResetForm } from "@/components/auth/PasswordResetForm";

// User should have a temporary session from the email link
// If not, they'll get an error when trying to reset
const user = Astro.locals.user;

// Get error from URL if callback failed
const error = Astro.url.searchParams.get("error");
---

<Layout title="Ustawianie nowego hasła - ChairAI">
  <main class="min-h-screen flex items-center justify-center px-4 py-12 bg-background">
    <div class="w-full max-w-md space-y-8">
      <div class="text-center space-y-2">
        <h1 class="text-3xl font-bold tracking-tight">Ustaw nowe hasło</h1>
        <p class="text-muted-foreground">Wprowadź nowe hasło dla swojego konta</p>
      </div>

      {
        error && (
          <div
            class="p-4 text-sm text-destructive bg-destructive/10 border border-destructive/20 rounded-md"
            role="alert"
          >
            {decodeURIComponent(error)}
          </div>
        )
      }

      <div class="bg-card p-8 rounded-lg border shadow-sm">
        <PasswordResetForm client:load />
      </div>
    </div>
  </main>
</Layout>
